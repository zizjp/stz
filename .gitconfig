[alias]
    co = checkout
    br = branch
    st = status -sb
    lg = log --oneline --graph --decorate --all
    ci = commit
    acp = "!f() { git add -A && git commit -m \"$1\" && git push; }; f"
    fix = "!git add -A && git commit --amend --no-edit && git push --force-with-lease"
    sync = "!git fetch --all --prune && git pull --ff-only"
    sav = "!git stash push -u -m \"WIP\" && git pull --ff-only"
    uns = "!git stash pop"
    undo = reset --soft HEAD~1
    unstage = reset HEAD --
